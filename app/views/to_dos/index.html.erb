<h1>Listing to_dos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Notes</th>
    <th>Created by</th>
    <th>Completed by</th>
    <th>Due date</th>
    <th>Assigned person</th>
    <th>Todo category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @to_dos.each do |to_do| %>
  <tr>
    <td><%= to_do.title %></td>
    <td><%= to_do.notes %></td>
    <td><%= to_do.created_by %></td>
    <td><%= to_do.completed_by %></td>
    <td><%= to_do.due_date %></td>
    <td><%= to_do.assigned_person %></td>
    <td><%= to_do.todo_category_id %></td>
    <td><%= link_to 'Show', to_do %></td>
    <td><%= link_to 'Edit', edit_to_do_path(to_do) %></td>
    <td><%= link_to 'Destroy', to_do, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

