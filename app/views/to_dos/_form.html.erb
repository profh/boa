<%= simple_form_for(@to_do) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :title %>

    <%= f.input :notes %>

    <%= f.input :created_by %>

    <%= f.input :completed_by %>

    <%= f.input :due_date %>

    <%= f.input :assigned_person %>

    <%= f.input :todo_category_id %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
